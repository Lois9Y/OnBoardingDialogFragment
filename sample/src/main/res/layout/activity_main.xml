<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="at.nineyards.onboarding.MainActivity">



    <Button
        android:id="@+id/basic_launch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Basic OnBoarding Dialog"/>

    <Button
        android:id="@+id/sales_pitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/basic_launch"
        android:layout_centerInParent="true"
        android:text="Some Sales Pitch Dialog"/>

</RelativeLayout>
